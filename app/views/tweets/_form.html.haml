= form_with model: tweet, id: dom_id(tweet) do |f|
  - if tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - tweet.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
